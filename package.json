{
  "name": "react-graphql-blog",
  "version": "0.1.0",
  "description": "A blog app built with React, GraphQL, and TypeScript.",
  "main": "index.js",
  "scripts": {
    "start": "npm run dev-server",
    "dev-server": "npx ts-node -T ./script/devServer",
    "build:client": "npx webpack --config ./config/webpack/clientPages.ts",
    "build:render": "npx webpack --config ./config/webpack/render.ts",
    "build": "npm run build:render && npm run build:client",
    "format": "npx prettier --write '**/*.{js,ts,tsx,html,md,yml,graphql,css}'",
    "test:lint": "npx eslint . --ext .tsx,.ts,.js.,.jsx",
    "test:types": "npx tsc --noEmit",
    "test:spec": "npx jest --runInBand=${SPEC_SERIAL:-$CI} --coverage=${SPEC_COVERAGE:-$CI}",
    "test": "npm run test:types --slient && npm run test:lint --slient",
    "graphql:generate": "npx apollo client:codegen --target=typescript --passthroughCustomScalars --customScalarsPrefix=GraphQL. --globalTypesFile=src/__generated__/schema.ts",
    "graphql:generate-watch": "npm run graphql:generate -- --watch",
    "graphql:download-schema": "npx apollo client:download-schema",
    "prepare": "npm run graphql:generate"
  },
  "author": "Neal Granger <neal@nealg.com>",
  "license": "MIT",
  "devDependencies": {
    "@graphql-codegen/fragment-matcher": "1.3.1",
    "@graphql-codegen/introspection": "1.3.1",
    "@graphql-codegen/typescript": "1.3.1",
    "@graphql-codegen/typescript-graphql-files-modules": "1.3.1",
    "@graphql-codegen/typescript-operations": "1.3.1",
    "@graphql-codegen/typescript-react-apollo": "1.3.1",
    "@hot-loader/react-dom": "^16.8.6",
    "@testing-library/react": "^8.0.1",
    "@types/express": "^4.17.0",
    "@types/highlight.js": "^9.12.3",
    "@types/history": "^4.7.2",
    "@types/jest": "^24.0.15",
    "@types/memory-fs": "^0.3.2",
    "@types/node": "^12.0.10",
    "@types/node-fetch": "^2.3.7",
    "@types/react": "^16.8.22",
    "@types/react-dom": "^16.8.4",
    "@types/react-helmet": "^5.0.8",
    "@types/react-hot-loader": "^4.1.0",
    "@types/react-router": "^5.0.2",
    "@types/react-router-dom": "^4.3.4",
    "@types/styled-components": "^4.1.16",
    "@types/webpack": "^4.4.33",
    "@types/webpack-dev-middleware": "^2.0.2",
    "@types/webpack-hot-middleware": "^2.16.5",
    "@types/webpack-node-externals": "^1.6.3",
    "@typescript-eslint/eslint-plugin": "^1.10.2",
    "@typescript-eslint/parser": "^1.10.2",
    "apollo": "2.12.2",
    "awesome-typescript-loader": "^5.2.1",
    "clean-webpack-plugin": "^3.0.0",
    "deepmerge": "^3.3.0",
    "eslint": "^5.16.0",
    "eslint-plugin-graphql": "^3.0.3",
    "eslint-plugin-prettier": "^3.1.0",
    "eslint-plugin-react": "^7.13.0",
    "eslint-plugin-react-hooks": "^1.6.0",
    "esm": "^3.2.25",
    "express": "^4.17.1",
    "file-loader": "^4.0.0",
    "graphql": "^14.3.1",
    "jest": "^24.8.0",
    "jest-circus": "^24.8.0",
    "killable": "^1.0.1",
    "loader-utils": "^1.2.3",
    "memory-fs": "^0.4.1",
    "pages-webpack-plugin": "^0.3.0",
    "prettier": "^1.18.2",
    "raw-loader": "^3.0.0",
    "react-hot-loader": "^4.11.1",
    "require-from-string": "^2.0.2",
    "source-map-loader": "^0.2.4",
    "source-map-support": "^0.5.12",
    "string-hash": "^1.1.3",
    "ts-jest": "^24.0.2",
    "ts-node": "^8.3.0",
    "typescript": "^3.5.2",
    "typescript-plugin-styled-components": "^1.4.3",
    "webpack": "^4.35.0",
    "webpack-cli": "^3.3.4",
    "webpack-dev-middleware": "^3.7.0",
    "webpack-hot-middleware": "^2.25.0",
    "webpack-node-externals": "^1.7.2",
    "worker-loader": "^2.0.0"
  },
  "dependencies": {
    "@apollo/react-common": "0.1.0-beta.8",
    "@apollo/react-hooks": "0.1.0-beta.10",
    "apollo-cache-inmemory": "^1.6.2",
    "apollo-client": "^2.6.3",
    "apollo-link": "^1.2.12",
    "apollo-link-http": "^1.5.15",
    "highlight.js": "^9.15.8",
    "node-fetch": "^2.6.0",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "react-helmet-async": "^1.0.2",
    "react-markdown": "^4.1.0",
    "react-router-dom": "^5.0.1",
    "remark-parse": "^5.0.0",
    "styled-components": "^4.3.2",
    "unified": "^6.2.0"
  },
  "jest": {
    "moduleNameMapper": {
      "^/(.*)$": "<rootDir>/src/$1"
    },
    "testURL": "http://localhost/",
    "testMatch": [
      "<rootDir>/src/**/?(*.)test.ts"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "globals": {
      "ts-jest": {
        "diagnostics": false
      }
    }
  }
}
